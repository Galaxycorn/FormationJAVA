<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <!-- configuration de la base de donnée -->
    <persistence-unit name="beaverLover" transaction-type="RESOURCE_LOCAL">
        <!-- implementation de jpa à utiliser -->
        <provider>
			org.hibernate.jpa.HibernatePersistenceProvider
		</provider>
        <properties>
            <!--  toutes les proprietés sont pour hibernate -->
            <!-- implementation du jdbc à utiliser -->
            <property name="hibernate.connection.driver" value="com.mysql.cj.jdbc.Driver" />
            <!-- config de l'acces à la base -->
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/eshopJpa" />
            <property name="hibernate.connection.user" value="root" />
            <property name="hibernate.connection.password" value="root123@" />

            <!-- dialect hibernate=>avec quelle base hibernate communique -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>